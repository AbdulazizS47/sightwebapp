<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/title"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="24dp"/>

  <EditText
    android:id="@+id/serverUrl"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="@string/server_url"
    android:inputType="textUri"
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="24dp"/>

  <EditText
    android:id="@+id/deviceKey"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="@string/device_key"
    android:inputType="textPassword"
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/serverUrl"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="24dp"/>

  <Spinner
    android:id="@+id/printerSpinner"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/deviceKey"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="24dp"/>

  <LinearLayout
    android:id="@+id/buttonRow"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/printerSpinner"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp">

    <Button
      android:id="@+id/connectButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/connect"/>

    <Button
      android:id="@+id/startButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/start"
      android:layout_marginStart="12dp"/>

    <Button
      android:id="@+id/testButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/test_print"
      android:layout_marginStart="12dp"/>
  </LinearLayout>

  <TextView
    android:id="@+id/serviceStatusLabel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/service_status"
    android:textSize="12sp"
    app:layout_constraintTop_toBottomOf="@id/buttonRow"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="24dp"/>

  <TextView
    android:id="@+id/serviceStatusText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="-"
    android:textSize="14sp"
    app:layout_constraintTop_toBottomOf="@id/serviceStatusLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="24dp"/>

  <TextView
    android:id="@+id/serverStatusLabel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/server_status"
    android:textSize="12sp"
    app:layout_constraintTop_toBottomOf="@id/serviceStatusText"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="24dp"/>

  <TextView
    android:id="@+id/serverStatusText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="-"
    android:textSize="14sp"
    app:layout_constraintTop_toBottomOf="@id/serverStatusLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="24dp"/>

  <TextView
    android:id="@+id/printerStatusLabel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/printer_status"
    android:textSize="12sp"
    app:layout_constraintTop_toBottomOf="@id/serverStatusText"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="24dp"/>

  <TextView
    android:id="@+id/printerStatusText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="-"
    android:textSize="14sp"
    app:layout_constraintTop_toBottomOf="@id/printerStatusLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="24dp"/>

  <TextView
    android:id="@+id/lastOrderLabel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/last_order"
    android:textSize="12sp"
    app:layout_constraintTop_toBottomOf="@id/printerStatusText"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="24dp"/>

  <TextView
    android:id="@+id/lastOrderText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="-"
    android:textSize="14sp"
    app:layout_constraintTop_toBottomOf="@id/lastOrderLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="24dp"/>

  <TextView
    android:id="@+id/errorText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/last_error"
    android:textSize="12sp"
    app:layout_constraintTop_toBottomOf="@id/lastOrderText"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
