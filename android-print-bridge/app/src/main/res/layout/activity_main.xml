<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true"
  android:background="#F6F6F6">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/title"
      android:textSize="22sp"
      android:textStyle="bold"
      android:textColor="#111111"/>

    <TextView
      android:id="@+id/subtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/subtitle"
      android:textSize="13sp"
      android:textColor="#666666"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="16dp"/>

    <LinearLayout
      android:id="@+id/connectionCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp"
      android:background="@drawable/card_bg"
      android:layout_marginBottom="14dp">

      <TextView
        android:id="@+id/connectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connection_settings"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#111111"/>

      <EditText
        android:id="@+id/serverUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/server_url"
        android:inputType="textUri"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/input_bg"/>

      <EditText
        android:id="@+id/deviceKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/device_key"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"/>

      <Spinner
        android:id="@+id/printerSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"/>

      <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="14dp">

        <Button
          android:id="@+id/connectButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/connect"
          android:background="@drawable/secondary_button_bg"
          android:textColor="#111111"/>

        <Button
          android:id="@+id/startButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/start"
          android:layout_marginStart="10dp"
          android:background="@drawable/primary_button_bg"
          android:textColor="#FFFFFF"/>

        <Button
          android:id="@+id/testButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/test_print"
          android:layout_marginStart="10dp"
          android:background="@drawable/secondary_button_bg"
          android:textColor="#111111"/>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/statusCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp"
      android:background="@drawable/card_bg"
      android:layout_marginBottom="14dp">

      <TextView
        android:id="@+id/statusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_overview"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#111111"/>

      <TextView
        android:id="@+id/serviceStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_status"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="12dp"/>

      <TextView
        android:id="@+id/serviceStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textColor="#111111"/>

      <TextView
        android:id="@+id/serverStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/server_status"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="10dp"/>

      <TextView
        android:id="@+id/serverStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textColor="#111111"/>

      <TextView
        android:id="@+id/printerStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/printer_status"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="10dp"/>

      <TextView
        android:id="@+id/printerStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textColor="#111111"/>

      <TextView
        android:id="@+id/lastOrderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_order"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="10dp"/>

      <TextView
        android:id="@+id/lastOrderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textColor="#111111"/>

      <TextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_error"
        android:textSize="12sp"
        android:textColor="#B91C1C"
        android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/queueCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp"
      android:background="@drawable/card_bg"
      android:layout_marginBottom="10dp">

      <TextView
        android:id="@+id/queueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orders_queue"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#111111"/>

      <TextView
        android:id="@+id/queueEmptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_pending_orders"
        android:textSize="13sp"
        android:textColor="#666666"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="12dp"/>

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/queueList"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:nestedScrollingEnabled="true"/>
    </LinearLayout>
  </LinearLayout>
</androidx.core.widget.NestedScrollView>
