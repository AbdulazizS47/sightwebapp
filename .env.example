# Copy to .env and fill values

# Authentica OTP (SMS)
SMS_PROVIDER=authentica
AUTHENTICA_API_KEY=YOUR_AUTHENTICA_KEY
AUTHENTICA_TEMPLATE_ID=1
AUTHENTICA_METHOD=sms

# OTP controls
OTP_TTL_MS=300000
OTP_RESEND_MIN_MS=60000
OTP_MAX_PER_HOUR=5
OTP_MAX_ATTEMPTS=5
OTP_PEPPER=REPLACE_WITH_LONG_RANDOM_STRING

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=YOUR_DB_PASSWORD
MYSQL_DATABASE=sight_app

# Admin
ADMIN_PHONE=0547444145
ADMIN_TOKEN=OPTIONAL_SERVER_SIDE_TOKEN

# Printing
PRINT_DEVICE_KEY=SET_A_DEVICE_KEY_FOR_PRINT_BRIDGE
